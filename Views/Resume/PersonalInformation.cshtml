@model OnlineJobPortal.Models.PersonalInfo
<div id="leftPan">
		<h2>Personal <span>Information</span></h2>
          <form action="/Resume/UpdateInfo" method="post" enctype="multipart/form-data">
               @Html.ValidationSummary(true)
             <br /><br /><br />
         @Html.HiddenFor(model => model.InfoID)      
         @Html.HiddenFor(model => model.UserId)
               <table border="0">
                   <tr><td>@Html.LabelFor(model => model.ProfilePicture)</td>
                      <td><input type="file" name="file" id="file"/></td>
                      <td>@Html.ValidationMessageFor(model => model.ProfilePicture)</td></tr>
                   <tr><td>@Html.LabelFor(model => model.Name)</td>
                      <td>@Html.EditorFor(model => model.Name)</td>
                      <td>@Html.ValidationMessageFor(model => model.Name)</td></tr>

                   <tr><td>@Html.LabelFor(model => model.FatherName)</td>
                      <td>@Html.EditorFor(model => model.FatherName)</td>
                      <td>@Html.ValidationMessageFor(model => model.FatherName)</td></tr>

                   <tr><td>@Html.LabelFor(model => model.CNIC)</td>
                      <td> @Html.EditorFor(model => model.CNIC)</td>
                      <td> @Html.ValidationMessageFor(model => model.CNIC)</td></tr>

                   <tr><td>@Html.LabelFor(model => model.Gender)</td>
                      <td><select name="Gender">

               @if(ViewBag.gender==null)
               {
                     <option value="none">select gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
               }
               @if(ViewBag.gender!=null)
               {
                    if(Model.Gender.Equals("none"))
                    {
                        <option value="none">select gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    }
                    if(Model.Gender.Equals("Male"))
                    {
                        <option value="Male" selected="selected">Male</option>
                        <option value="Female">Female</option>
                    }
                    if(Model.Gender.Equals("Female"))
                    {
                        <option value="Male">Male</option>
                        <option value="Female" selected="selected">Female</option>
                    }
               }
            
          </select></td></tr>
                   <tr><td>@Html.LabelFor(model => model.Martial_Status)</td>
                      <td><select name="Martial_Status">
                @if (ViewBag.martial == null)
                {
                    <option value="none">select type</option>
                   <option value="Married">Married</option>
                   <option value="Single">Single</option>
                }
              @if (ViewBag.martial != null)
              {
                   if(Model.Martial_Status.Equals("Married"))
                   {
                     <option value="Married" selected="selected">Married</option>
                     <option value="Single">Single</option>
                   }
                   if (Model.Martial_Status.Equals("Single"))
                   {
                      <option value="Married">Married</option>
                       <option value="Single" selected="selected">Single</option>
                   }
                   if(Model.Martial_Status.Equals("none"))
                   {
                        <option value="none">select type</option>
                       <option value="Married">Married</option>
                       <option value="Single">Single</option>
                   }
              }
          </select></td></tr>
                    <tr>
                   <td>@Html.LabelFor(model => model.Country)</td>
                   <td><select name="Country">
               @if (ViewBag.Country == null)
               {
                    <option value="none">select type</option>
                    <option value="Pakistan">Pakistan</option>
                    <option value="India">India</option>
                    <option value="America">America</option>
               }
               @if (ViewBag.Country != null)
               {
                   if (Model.Country.Equals("Pakistan"))
                   {
                     <option value="Pakistan" selected="selected">Pakistan</option>
                     <option value="India">India</option>
                     <option value="America">America</option>
                   }
                   if (Model.Country.Equals("India"))
                   {
                       <option value="Pakistan">Pakistan</option>
                     <option value="India" selected="selected">India</option>
                     <option value="America">America</option>
                   }
                    if (Model.Country.Equals("America"))
                   {
                       <option value="Pakistan">Pakistan</option>
                     <option value="India" >India</option>
                     <option value="America" selected="selected">America</option>
                   }
                   if(Model.Country.Equals("none"))
                   {
                        <option value="none">select type</option>
                        <option value="Pakistan">Pakistan</option>
                        <option value="India">India</option>
                        <option value="America">America</option>
                   }
               }
          </select></td></tr>
                   <tr><td>@Html.LabelFor(model => model.City)</td>
                 <td><select name="City">
                @if (ViewBag.City == null)
                {
                    <option value="none">select type</option>
                    <option value="Lahore">Lahore</option>
                    <option value="karachi">karachi</option>
                    <option value="Islamabad">Islamabad</option>
                }
                @if (ViewBag.City != null)
                {
                       if (Model.City.Equals("Lahore"))
                       {
                         <option value="Lahore" selected="selected">Lahore</option>
                         <option value="karachi">karachi</option>
                         <option value="Islamabad">Islamabad</option>
                       }
                       if (Model.City.Equals("karachi"))
                       {
                           <option value="Lahore">Lahore</option>
                         <option value="karachi" selected="selected">karachi</option>
                         <option value="Islamabad">Islamabad</option>
                       }
                       if (Model.City.Equals("Islamabad"))
                       {
                           <option value="Lahore">Lahore</option>
                         <option value="karachi" >karachi</option>
                         <option value="Islamabad" selected="selected">Islamabad</option>
                       }
                       if(Model.City.Equals("none"))
                       {
                            <option value="none">select type</option>
                            <option value="Lahore">Lahore</option>
                            <option value="karachi">karachi</option>
                            <option value="Islamabad">Islamabad</option>
                       }
                }
            
          </select></td></tr>
                   <tr><td> @Html.LabelFor(model => model.Industry)</td>
                       <td><select name="Industry">
                @if (ViewBag.industry == null)
                {
                    <option value="none">select type</option>
                    <option value="IT">IT</option>
                    <option value="Medical">Medical</option>
                    <option value="Law">Law</option>
                }
               @if (ViewBag.industry != null)
               {
                   if (Model.Industry.Equals("IT"))
                   {
                     <option value="IT" selected="selected">IT</option>
                     <option value="Medical">Medical</option>
                     <option value="Law">Law</option>
                   }
                   if (Model.Industry.Equals("Medical"))
                   {
                       <option value="IT">IT</option>
                     <option value="Medical" selected="selected">Medical</option>
                     <option value="Law">Law</option>
                   }
                   if (Model.Industry.Equals("Law"))
                   {
                       <option value="IT">IT</option>
                     <option value="Medical" >Medical</option>
                     <option value="Law" selected="selected">Law</option>
                   }
                   if(Model.Industry.Equals("none"))
                   {
                        <option value="none">select type</option>
                        <option value="IT">IT</option>
                        <option value="Medical">Medical</option>
                        <option value="Law">Law</option>
                   }
               }
            
          </select></td></tr>
                   <tr><td> @Html.LabelFor(model => model.ExperienceLevel)</td>
                       <td><select name="ExperienceLevel">
               @if (ViewBag.ExperienceLevel == null)
               {
                   <option value="none">select type</option>
                    <option value="Student">Student</option>
                    <option value="1 year">1 year</option>
                   <option value="more than 1 year">more than 1 year</option>
               }
               @if (ViewBag.ExperienceLevel != null)
               {
                   if (Model.ExperienceLevel.Equals("Student"))
                   {
                     <option value="Student" selected="selected">Student</option>
                     <option value="1 year">1 year</option>
                     <option value="more than 1 year">more than 1 year</option>
                   }
                   if (Model.ExperienceLevel.Equals("1 year"))
                   {
                       <option value="Student">Student</option>
                     <option value="1 year" selected="selected">1 year</option>
                     <option value="more than 1 year">more than 1 year</option>
                   }
                   if (Model.ExperienceLevel.Equals("more than 1 year"))
                   {
                       <option value="Student">Student</option>
                     <option value="1 year" >1 year</option>
                     <option value="more than 1 year" selected="selected">more than 1 year</option>
                   }
                   if(Model.ExperienceLevel.Equals("none"))
                   {
                        <option value="none">select type</option>
                        <option value="Student">Student</option>
                        <option value="1 year">1 year</option>
                        <option value="more than 1 year">more than 1 year</option>
                   }
               }
            
          </select></td></tr>
                    <tr><td>@Html.LabelFor(model => model.DOB)</td>
                      <td>  @Html.EditorFor(model => model.DOB)</td>
                      <td> @Html.ValidationMessageFor(model => model.DOB)</td></tr>

                    <tr><td> @Html.LabelFor(model => model.EmailAddress)</td>
                      <td>   @Html.EditorFor(model => model.EmailAddress)</td>
                      <td>   @Html.ValidationMessageFor(model => model.EmailAddress)</td></tr>

                   <tr><td>   @Html.LabelFor(model => model.Phoneno)</td>
                      <td>    @Html.EditorFor(model => model.Phoneno)</td>
                      <td>    @Html.ValidationMessageFor(model => model.Phoneno)</td></tr>

                    <tr><td>  @Html.LabelFor(model => model.Address)</td>
                      <td>    @Html.EditorFor(model => model.Address)</td>
                      <td>    @Html.ValidationMessageFor(model => model.Address)</td></tr>

                   <tr><td>  @Html.LabelFor(model => model.ProfessionalSummary)</td>
                      <td>    @Html.TextAreaFor(model => model.ProfessionalSummary)</td></tr>

                   </table>
        
        <p>
            <input type="submit" value="Next" />
        </p>
          </form>
		
  </div>
