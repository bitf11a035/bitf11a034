                           <option value="KhyberPakhtunkhwa">KhyberPakhtunkhwa</option>
                           <option value="Balochistan">Balochistan</option>
                       }
                       if (Model.Province.Equals("KhyberPakhtunkhwa"))
                       {
                           <option value="Punjab">Punjab</option>
                           <option value="Sindh">Sindh</option>
                           <option value="KhyberPakhtunkhwa" selected="selected">KhyberPakhtunkhwa</option>
                           <option value="Balochistan">Balochistan</option>
                       }
                       if (Model.Province.Equals("Balochistan"))
