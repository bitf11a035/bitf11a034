@model OnlineJobPortal.Models.Project

    <div id="leftPan">
        <h2>Pro<span>jects</span></h2>
        @using (Html.BeginForm("UpdateProject", "Resume", FormMethod.Post))
        {
                   @Html.ValidationSummary(true)
                  <br /><br /><br /><br /><br />
                     @Html.HiddenFor(model => model.ProjectID)
                     @Html.HiddenFor(model => model.UserID)
           <table border="0">

                  <tr><td>@Html.LabelFor(model => model.ProjectType)</td>
                 <td><select name="ProjectType">
                @if (ViewBag.ProjectType == null)
                {
                   <option >Select type</option>
                   <option value="Academic">Academic</option>
                   <option value="AcademicResearch">AcademicResearch</option>
                   <option value="Professional">Professional</option>
                   <option value="ProfessionalResearch">ProfessionalResearch</option>
                }
                @if (ViewBag.ProjectType != null)
                {
                       if (Model.ProjectType.Equals("Academic"))
                       {
                         <option value="Academic" selected="selected">Academic</option>
                        <option value="AcademicResearch">AcademicResearch</option>
                        <option value="Professional">Professional</option>
                        <option value="ProfessionalResearch">ProfessionalResearch</option>
                       }
                       if (Model.ProjectType.Equals("AcademicResearch"))
                       {
                           <option value="Academic">Academic</option>
                           <option value="AcademicResearch" selected="selected">AcademicResearch</option>
                           <option value="Professional">Professional</option>
                           <option value="ProfessionalResearch">ProfessionalResearch</option>
                       }
                       if (Model.ProjectType.Equals("Professional"))
                       {
                           <option value="Academic">Academic</option>
                           <option value="AcademicResearch">AcademicResearch</option>
                           <option value="Professional" selected="selected">Professional</option>
                           <option value="ProfessionalResearch">ProfessionalResearch</option>
                       }
                       if (Model.ProjectType.Equals("ProfessionalResearch"))
                       {
                           <option value="Academic">Academic</option>
                           <option value="AcademicResearch">AcademicResearch</option>
                           <option value="Professional">Professional</option>
                           <option value="ProfessionalResearch" selected="selected">ProfessionalResearch</option>
                       }
                       if (Model.ProjectType.Equals("none"))
                       {
                            <option >Select type</option>
                           <option value="Academic">Academic</option>
                           <option value="AcademicResearch">AcademicResearch</option>
                           <option value="Professional">Professional</option>
                           <option value="ProfessionalResearch">ProfessionalResearch</option>
                       }
                }
            
          </select></td></tr>

                <tr><td>@Html.LabelFor(model => model.ProjectTitle)</td>
                      <td>@Html.TextBoxFor(model => model.ProjectTitle)</td>
                      <td>@Html.ValidationMessageFor(model => model.ProjectTitle)</td></tr>

                <tr><td>@Html.LabelFor(model => model.Position)</td>
                      <td>@Html.TextBoxFor(model => model.Position)</td>
                      <td>@Html.ValidationMessageFor(model => model.Position)</td></tr>

                <tr>
                   <td>@Html.LabelFor(model => model.Country)</td>
                   <td><select name="Country">
               @if (ViewBag.Country == null)
               {
                    <option value="none">select type</option>
                    <option value="Pakistan">Pakistan</option>
                    <option value="India">India</option>
                    <option value="America">America</option>
               }
