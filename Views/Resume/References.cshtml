@model OnlineJobPortal.Models.Reference

    <div id="leftPan">
        <h2>Refer<span>ences</span></h2>
        @using (Html.BeginForm("UpdateReference", "Resume", FormMethod.Post))
        {
                   @Html.ValidationSummary(true)
                  <br /><br /><br /><br /><br />
                     @Html.HiddenFor(model => model.ReferenceID)
                     @Html.HiddenFor(model => model.UserID)
           <table border="0">

                <tr><td>@Html.LabelFor(model => model.Name)</td>
                      <td>@Html.TextBoxFor(model => model.Name)</td>
                      <td>@Html.ValidationMessageFor(model => model.Name)</td></tr>

                <tr><td>@Html.LabelFor(model => model.JobTitle)</td>
                      <td>@Html.TextBoxFor(model => model.JobTitle)</td>
                      <td>@Html.ValidationMessageFor(model => model.JobTitle)</td></tr>

                <tr><td>@Html.LabelFor(model => model.Organisation)</td>
                      <td>@Html.TextBoxFor(model => model.Organisation)</td>
                      <td>@Html.ValidationMessageFor(model => model.Organisation)</td></tr>

                <tr><td>@Html.LabelFor(model => model.EmailAddress)</td>
                      <td>@Html.TextBoxFor(model => model.EmailAddress)</td>
                      <td>@Html.ValidationMessageFor(model => model.EmailAddress)</td></tr>

                <tr><td>@Html.LabelFor(model => model.Phoneno)</td>
                      <td>@Html.TextBoxFor(model => model.Phoneno)</td>
                      <td>@Html.ValidationMessageFor(model => model.Phoneno)</td></tr>

                <tr>
                   <td>@Html.LabelFor(model => model.Country)</td>
                   <td><select name="Country">
               @if (ViewBag.Country == null)
               {
                    <option value="none">select type</option>
                    <option value="Pakistan">Pakistan</option>
                    <option value="India">India</option>
                    <option value="America">America</option>
               }
               @if (ViewBag.Country != null)
               {
                   if (Model.Country.Equals("Pakistan"))
                   {
                     <option value="Pakistan" selected="selected">Pakistan</option>
                     <option value="India">India</option>
                     <option value="America">America</option>
                   }
                   if (Model.Country.Equals("India"))
                   {
                       <option value="Pakistan">Pakistan</option>
                     <option value="India" selected="selected">India</option>
                     <option value="America">America</option>
                   }
                    if (Model.Country.Equals("America"))
                   {
                       <option value="Pakistan">Pakistan</option>
                     <option value="India" >India</option>
                     <option value="America" selected="selected">America</option>
                   }
                   if(Model.Country.Equals("none"))
                   {
                        <option value="none">select type</option>
                        <option value="Pakistan">Pakistan</option>
                        <option value="India">India</option>
                        <option value="America">America</option>
                   }
               }
          </select></td></tr>

               <tr><td>@Html.LabelFor(model => model.City)</td>
                 <td><select name="City">
                @if (ViewBag.City == null)
                {
                    <option value="none">select type</option>
                    <option value="Lahore">Lahore</option>
                    <option value="karachi">karachi</option>
                    <option value="Islamabad">Islamabad</option>
                }
                @if (ViewBag.City != null)
                {
                       if (Model.City.Equals("Lahore"))
                       {
                         <option value="Lahore" selected="selected">Lahore</option>
                         <option value="karachi">karachi</option>
                         <option value="Islamabad">Islamabad</option>
                       }
                       if (Model.City.Equals("karachi"))
                       {
                           <option value="Lahore">Lahore</option>
                         <option value="karachi" selected="selected">karachi</option>
                         <option value="Islamabad">Islamabad</option>
                       }
                       if (Model.City.Equals("Islamabad"))
                       {
                           <option value="Lahore">Lahore</option>
                         <option value="karachi" >karachi</option>
                         <option value="Islamabad" selected="selected">Islamabad</option>
                       }
                       if(Model.City.Equals("none"))
                       {
                            <option value="none">select type</option>
                            <option value="Lahore">Lahore</option>
                            <option value="karachi">karachi</option>
                            <option value="Islamabad">Islamabad</option>
                       }
                }
            
          </select></td></tr>

                <tr><td>@Html.LabelFor(model => model.Province)</td>
                 <td><select name="Province">
                @if (ViewBag.Province == null)
                {
                   <option >Select Province</option>
                   <option value="Punjab">Punjab</option>
                   <option value="Sindh">Sindh</option>
                   <option value="KhyberPakhtunkhwa">KhyberPakhtunkhwa</option>
                   <option value="Balochistan">Balochistan</option>
                }
                @if (ViewBag.Province != null)
                {
                       if (Model.Province.Equals("Punjab"))
                       {
                         <option value="Punjab" selected="selected">Punjab</option>
                        <option value="Sindh">Sindh</option>
                        <option value="KhyberPakhtunkhwa">KhyberPakhtunkhwa</option>
                        <option value="Balochistan">Balochistan</option>
                       }
                       if (Model.Province.Equals("Sindh"))
                       {
                           <option value="Punjab">Punjab</option>
                           <option value="Sindh" selected="selected">Sindh</option>
                           <option value="KhyberPakhtunkhwa">KhyberPakhtunkhwa</option>
                           <option value="Balochistan">Balochistan</option>
                       }
                       if (Model.Province.Equals("KhyberPakhtunkhwa"))
                       {
                           <option value="Punjab">Punjab</option>
                           <option value="Sindh">Sindh</option>
                           <option value="KhyberPakhtunkhwa" selected="selected">KhyberPakhtunkhwa</option>
                           <option value="Balochistan">Balochistan</option>
                       }
                       if (Model.Province.Equals("Balochistan"))
                       {
                           <option value="Punjab">Punjab</option>
                           <option value="Sindh">Sindh</option>
                           <option value="KhyberPakhtunkhwa">KhyberPakhtunkhwa</option>
                           <option value="Balochistan" selected="selected">Balochistan</option>
                       }
                        if (Model.Province.Equals("none"))
                       {
                            <option >Select Province</option>
                           <option value="Punjab">Punjab</option>
                           <option value="Sindh">Sindh</option>
                           <option value="KhyberPakhtunkhwa">KhyberPakhtunkhwa</option>
                           <option value="Balochistan">Balochistan</option>
                       }
                }
            
          </select></td></tr>
             

               <tr><td>@Html.LabelFor(model => model.ReferenceType)</td>
                 <td><select name="ReferenceType">
                @if (ViewBag.ReferenceType == null)
                {
                   <option >Select Type</option>
                   <option value="Professional">Professional</option>
                   <option value="Personal">Personal</option>
                   <option value="Superior">Superior</option>
                   <option value="Other">Other</option>
                }
                @if (ViewBag.ReferenceType != null)
                {
                    if (Model.ReferenceType.Equals("Professional"))
                       {
                         <option value="Professional" selected="selected">Professional</option>
                        <option value="Personal">Personal</option>
                        <option value="Superior">Superior</option>
                        <option value="Other">Other</option>
                       }
                    if (Model.ReferenceType.Equals("Personal"))
                       {
                           <option value="Professional">Professional</option>
                           <option value="Personal" selected="selected">Personal</option>
                           <option value="Superior">Superior</option>
                           <option value="Other">Other</option>
                       }
                    if (Model.ReferenceType.Equals("Superior"))
                       {
                           <option value="Professional">Professional</option>
                           <option value="Personal">Personal</option>
                           <option value="Superior" selected="selected">Superior</option>
                           <option value="Other">Other</option>
                       }
                    if (Model.ReferenceType.Equals("Other"))
                    {
                           <option value="Professional">Professional</option>
                           <option value="Personal">Personal</option>
                           <option value="Superior">Superior</option>
                           <option value="Other" selected="selected">Other</option>
                       }
                    if (Model.ReferenceType.Equals("none"))
                       {
                            <option >Select Type</option>
                            <option value="Professional">Professional</option>
                            <option value="Personal">Personal</option>
                           <option value="Superior">Superior</option>
                           <option value="Other">Other</option>
                       }
                }
            
          </select></td></tr>

                    </table>
                   <p>
                         <input type="submit" value="Next" />
                    </p>
